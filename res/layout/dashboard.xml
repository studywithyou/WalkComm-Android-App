<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CB9FC"
    android:orientation="vertical" >

     <Button
         android:id="@+id/btn_contactUS"
         android:layout_width="130dp"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/btn_aboutUS"
         android:layout_alignBottom="@+id/btn_aboutUS"
         android:layout_alignParentRight="true"
         android:layout_marginRight="21dp"
         android:background="@drawable/red_button"
         android:text="Contact US" />

     <Button
         android:id="@+id/btn_aboutUS"
         android:layout_width="130dp"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="24dp"
         android:layout_marginLeft="18dp"
         android:background="@drawable/red_button"
         android:text="About US" />

     <Button
         android:id="@+id/btnLogout"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_above="@+id/btn_contactUS"
         android:layout_alignLeft="@+id/get_location"
         android:layout_marginBottom="43dp"
         android:text="Sign Out"
         android:background="@drawable/red_button"/>

     <Button
         android:id="@+id/get_location"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_above="@+id/btnLogout"
         android:layout_alignLeft="@+id/view_messages"
         android:layout_marginBottom="26dp"
         android:background="@drawable/red_button"
         android:text="Get Location" />

     <Button
         android:id="@+id/view_messages"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_above="@+id/get_location"
         android:layout_alignLeft="@+id/record_video"
         android:layout_marginBottom="27dp"
         android:background="@drawable/red_button"
         android:text="View My Messages" />

     <Button
         android:id="@+id/record_video"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_above="@+id/view_messages"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="24dp"
         android:background="@drawable/red_button"
         android:text="Record Video" />

     <Button
         android:id="@+id/record_audio"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_above="@+id/record_video"
         android:layout_alignLeft="@+id/record_video"
         android:layout_marginBottom="24dp"
         android:background="@drawable/red_button"
         android:text="Record Audio" />

     <ImageView
         android:layout_width="55dp"
         android:layout_height="55dp"
         android:layout_above="@+id/record_audio"
         android:layout_below="@+id/textView1"
         android:layout_centerHorizontal="true"
         android:src="@drawable/logo" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginTop="14dp"
         android:fontFamily="sans-serif "
         android:gravity="center"
         android:text="Welcome To WalkComm"
         android:textColor="#ffffff"
         android:textSize="25dip" />

</RelativeLayout>